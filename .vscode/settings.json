{
    "cSpell.words": [
        "pyproject"
    ],
    "python.analysis.extraPaths": [
        "${workspaceFolder}/.venv",
        "${workspaceFolder}/src"
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/src"
    },
}